        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="SayHelloButton" Content="Say Hello" HorizontalAlignment="Left" Margin="103,186,0,0" VerticalAlignment="Top" Width="75" Click="SayHelloButton_Click"/>
